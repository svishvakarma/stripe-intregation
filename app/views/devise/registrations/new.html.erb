<div class="flex justify-center items-center h-screen">
  <div class="max-w-md w-full px-6 py-4 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <p><%= f.label :email, class: 'font-semibold' %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full p-2 border border-gray-300 rounded-md' %></p>
      </div>

      <div class="mb-4">
        <p><%= f.label :password, class: 'font-semibold' %></p>
        <% if @minimum_password_length %>
          <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
        <% end %>
        <p><%= f.password_field :password, autocomplete: "new-password", class: 'w-full p-2 border border-gray-300 rounded-md' %></p>
      </div>

      <div class="mb-4">
        <p><%= f.label :password_confirmation, class: 'font-semibold' %></p>
        <p><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full p-2 border border-gray-300 rounded-md' %></p>
      </div>

      <div class="flex items-center">
        <%= f.submit "Sign up", class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
