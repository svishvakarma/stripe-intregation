<div class="flex justify-center items-center h-screen">
  <div class="max-w-md w-full px-6 py-4 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-4' }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: 'block font-semibold' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full p-2 border border-gray-300 rounded-md' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: 'block font-semibold' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full p-2 border border-gray-300 rounded-md' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, class: 'text-sm' %>
        </div>
      <% end %>

      <div class="flex items-center">
        <%= f.submit "Log in", class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
