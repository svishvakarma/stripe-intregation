<div class="flex justify-center items-center h-screen">
  <div class="max-w-md w-full px-6 py-4 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Product Details</h2>

    <p style="color: green;"><%= notice %></p>

    <%= render @product %>

    <div class="mt-4">
      <%= button_to "Edit this product", edit_product_path(@product), method: :get, class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md' %>
    </div>
    
    <div class="mt-4">
      <%= button_to "Back to products", products_path, method: :get, class: 'ml-4 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md' %>
    </div>

    <div class="mt-4">
      <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md' %>
    </div>
  </div>
</div>
